{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} - Notre galerie {% endblock %}

{% block body %}
<h1 class="p-3 d-flex justify-content-center">Notre galerie</h1>
    <div class= 'd-flex justify-content-center'>
    {{ form(form, {'attr': {'class': 'mx-auto'}}) }}
    </div>

    
{{ form_end(form) }}
 {% if artworks|length > 0 %}
    <div class="mb-4 container border-general">
        <div class="row">
            {% for artwork in artworks %}
            <div class="col-4">
                <div class="m-3 card">
                    <img src="/uploads/artwork/{{ artwork.picture }}" alt="{{artwork.title}}">
                    <h2 class="pt-2 text-center"> {{artwork.title}}</h2>
                    
                    <p class="mx-auto mt-1">
                        <a href="{{ path('artwork_show', {id:artwork.id})}}"><img class="know-more px-1" src="{{ asset('build/images/plus.svg') }}"> En savoir plus</a>
                    </p>
                    
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
    {% else %}
    <div class="d-flex mt-4 justify-content-center">
        <p>Aucune oeuvre ne correspond Ã  votre recherche.</p>
    </div>
    {% endif %}  
    <div class= 'd-flex justify-content-center'>
    {{ knp_pagination_render(artworks) }}
    </div>

{% endblock %}