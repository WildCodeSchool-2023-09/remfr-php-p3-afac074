{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe
{% endblock %}

{% block body %}
	{% for flash_error in app.flashes('reset_password_error') %}
		<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
	{% endfor %}
	<h1 class="text-center pt-3">Réinitialisation du mot de passe</h1>
	<div class="container">
	<div class="border-general mt-5 mb-5">
	{{ form_start(requestForm) }}
	{{ form_row(requestForm.email) }}

	<button class="btn btn-primary">Envoyer un e-mail de réinitialisation du mot de passe</button>
	{{ form_end(requestForm) }}
	</div>
	</div>
{% endblock %}
